#!/usr/bin/env node

const fs = require("fs");
const path = require("path");
const cp = require("child_process");

'use strict';

process.title = 'cocosDownloadBuilder';

fs.writeFileSync(path.join(__dirname, '../', 'basedir.txt'), process.cwd());

var arg = process.argv.splice(2);
global.DEBUG = false;

for(var i=0; i<arg.length; i++){
    if(arg[i] === '--debug'){
        global.DEBUG = true;
    }else if(arg[i] === '--name'){
        fs.writeFileSync(path.join(__dirname, '../', 'name.txt'), arg[i+1]);
        i++;
    }
}

//开始压缩
require('../lib/package');